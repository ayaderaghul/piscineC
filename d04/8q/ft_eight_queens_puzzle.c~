#include "h.h"

int ft_eight_queens_puzzle(void)
{
  ft_putstr("start program\n");
  
  int board[64];
  init(board, 64);

  ft_putstr("initialise board: ");
  print_array(board,64);
  
  int spots[8][64];
  int i = 0;
  while (i < 8)
    init(spots[i++], 64);

  ft_putstr("initialise spots: ");
  print_array(spots[0],64);
  
  int q = 0;
  int b = 0;
  int f = 0;
  int c = 0;
  int s = 0;
  while (f < 64)
    {
      ft_putmess('f', f);
      
      while (0 <= q && q <= 8)
	{
	  ft_putstr("\nstart to arrange queens: ");
	  ft_putnbr(q);
	  available_spot(board, spots[q]);
	  ft_putstr("\nboard after put a queen: ");
	  print_array(board,64);
	  ft_putstr("spot after put a queen: ");
	  print_array(spots[0],64);
	  if (!(avail(spots[q])))
	    {
	      b++;
	      --q;
	    }

	  s = spots[q][b];

	  ft_putmess('s',s);
	  ft_putchar('\n'); 
	  put_one(board, s);
	  write(1,board,64);
	  ++q;
	}
      //ft_putmess('q',q);
      //      ft_putchar('\n');
      if (q == 8)
	++c;
      if (q == 0)
	++f;
    }
  return c;
}
